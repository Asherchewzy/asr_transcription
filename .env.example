# Application Configuration
APP_NAME=Audio Transcription API

#db logger 
DEBUG=false

# Database
DATABASE_URL=sqlite:///./data/transcriptions.db

# Storage
UPLOAD_DIR=./uploads
MODEL_CACHE_DIR=./model_cache

# Whisper Model
WHISPER_MODEL_NAME=openai/whisper-tiny
WHISPER_CHUNK_LENGTH_S=30

# CORS port/ FE
CORS_ORIGINS=http://localhost:3000 

# Rate Limiting
TRANSCRIBE_RATE_LIMIT=15/minute

# Celery + Redis
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1
REDIS_HOST=redis
REDIS_PORT=6379

# baackend file Upload Limits, each file in MB
MAX_UPLOAD_SIZE_MB=15

# fronent file Upload Limits, each file in MB
VITE_MAX_FILE_SIZE=10

# Frontend Configuration
VITE_API_URL=http://localhost:8000
VITE_ALLOWED_FILE_TYPES=audio/mpeg,audio/mp3


